<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.YourAppName" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Make nav bar fully transparent -->
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <!-- Status bar should be a slightly darker shade of primary -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <!-- True = draw dark icons/text on status bar (because the background is light) -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="MyRoundedDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.MyRoundedCorner</item>
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorSecondary">@color/blue_500</item>
    </style>

    <style name="ShapeAppearance.MyRoundedCorner" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>